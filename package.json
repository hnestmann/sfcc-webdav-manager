{
  "name": "sfcc-webdav-manager",
  "version": "1.0.0",
  "description": "Salesforce B2C Commerce WebDAV File Manager",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "webdav",
    "salesforce",
    "b2c",
    "commerce",
    "file-manager"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "crypto-js": "^4.2.0",
    "electron-store": "^8.1.0",
    "webdav": "^5.3.0"
  },
  "build": {
    "appId": "com.yourcompany.sfcc-webdav-manager",
    "productName": "SFCC WebDAV Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
